<h2 class="page-title">{{fa-icon "fa-th-large"}} {{title}}</h2>

<div class="page-actions grid">

  <a href="#" {{bind-attr class=":actionable controller.currentlyFiltered:active"}} {{action 'toggleFilters'}} >
    {{#if currentlyFiltered}}
      {{#if onFiltersGreaterThanZero}}
        <span class="notify-number">
          {{controller.onFiltersLength}}
        </span>
      {{/if}}
    {{/if}}
    <!--abstract this -->
    {{#if controller.filtering}}
      {{fa-icon "fa-close"}}
    {{else}}
      {{fa-icon "fa-filter"}}
    {{/if}}
  </a>
  <a href="#" {{bind-attr class=":actionable controller.editing:editing:blank"}} {{action 'editDash'}}>
    {{#if controller.editing}}
      {{fa-icon "fa-close"}}
    {{else}}
      {{fa-icon "fa-pencil"}}
    {{/if}}
  </a>
  {{#link-to 'add' classNames="actionable"}}{{fa-icon "fa-plus"}} Add a channel{{/link-to}}
</div>

{{#liquid-if controller.filtering use="crossFade"}}
  {{live-filtering model=this}}
{{/liquid-if}}

<section class="grid">
  <div class="all-channels">
    {{#each item in librarySortAlpha}}
      {{partial "dash-channels"}}
    {{/each}}
  </div>
</section>
