<div class="filtering grid">

  <ul class="small-set">
    <li class="filter-heading">
      <a href="#" class="actionable" {{action 'toggleFiltersGroup' 'availablity'}}>
        {{check-box availabilityFilterOn}} Availablity
      </a>
    </li>
    {{#each filter in filtersGroupAvailability}}
      <li>
        <a href="#" class="actionable" {{action 'toggleFilter' filter.name}}>
          {{check-box filter.on}} {{filter.name}}
        </a>
      </li>
    {{/each}}
  </ul>

  <ul class="small-set">
    <li class="filter-heading">
      <a href="#" class="actionable" {{action 'toggleFiltersGroup' 'content'}}>
        {{check-box contentFilterOn}} Content
      </a>
    </li>
    {{#each filter in filtersGroupContent}}
      <li>
        <a href="#" class="actionable" {{action 'toggleFilter' filter.name}}>
          {{check-box filter.on}} {{filter.name}}
        </a>
      </li>
    {{/each}}
  </ul>

  <ul class="large-set">
    <li class="filter-heading">
      <a href="#" class="actionable" {{action 'toggleFiltersGroup' 'genres'}}>
        {{check-box genresFilterOn}} Genres
      </a>
    </li>
    {{#each filter in filtersGroupGenres}}
      <li>
        <a href="#" class="actionable" {{action 'toggleFilter' filter.name}}>
          {{check-box filter.on}} {{filter.name}}
        </a>
      </li>
    {{/each}}
  </ul>


  {{#if 'message'}}
    <div {{bind-attr class=":messaging error:error:message"}}>
      {{fa-icon "fa-asterisk"}} {{{message}}}
    </div>
  {{/if}}

</div>
